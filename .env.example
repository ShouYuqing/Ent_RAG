# API Keys
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# LLM Configuration
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002
TEMPERATURE=0.1
MAX_TOKENS=1000

# Vector Database Configuration
VECTOR_DB_TYPE=chroma  # Options: chroma, qdrant, milvus
CHROMA_PERSIST_DIRECTORY=./data/chroma
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=ent_rag_collection
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=ent_rag_collection

# Retrieval Configuration
DEFAULT_TOP_K=5
HYBRID_SEARCH_WEIGHT=0.7  # Weight for vector search vs keyword search (0-1)
RERANKING_ENABLED=true
QUERY_REWRITING_ENABLED=true

# Context Processing
MAX_CHUNK_SIZE=1000
MAX_CHUNK_OVERLAP=200
CHUNK_BY_SEMANTICS=true
MAX_CONTEXT_WINDOW_TOKENS=3500

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=false
LOG_LEVEL=INFO

# Security
API_KEY_REQUIRED=false
API_KEY=your_api_key_here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com 